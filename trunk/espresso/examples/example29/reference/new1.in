&CONTROL
  calculation = 'cp',
  restart_mode = 'from_scratch',
  nstep  = 20,
  iprint = 10,
  isave  = 10,
  tstress = .FALSE.,
  tprnfor = .TRUE.,
  dt    = 10.0d0,
  prefix = 'Si_dimer',
  pseudo_dir = '/home/puma/espresso/pseudo/',
  outdir='/home/puma/tmp/'

/
  
&SYSTEM
  ibrav = 1,
  celldm(1) = 15.,
  celldm(2) = 0.0,
  celldm(3) = 0.0,
