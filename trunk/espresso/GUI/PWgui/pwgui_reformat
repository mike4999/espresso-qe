if [ -z "$PWGUI" ]; then
    echo "

   Please define the PWGUI enviromental variable !!!
   PWGUI should point to the PWgui package root directory.

"
    exit 1
fi


if [ -d $PWGUI/bin ]; then
    $PWGUI/bin/itkwish $PWGUI/pwgui_reformat.tcl $@
else
    wish $PWGUI/pwgui_reformat.tcl $@
fi
