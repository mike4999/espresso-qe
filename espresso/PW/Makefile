TLDEPS=bindir mods libs libiotk

all : tldeps pw.x

pw.x : pwscf.o libpw.a $(LIBOBJS)
	$(MPIF90) $(LDFLAGS) -o $@ \
		pwscf.o $(MODULES) libpw.a $(LIBOBJS) $(LIBS)
	- ( cd ../bin; ln -fs ../PW/$@ . )

libpw.a : $(PWOBJS)
	$(AR) $(ARFLAGS) $@ $?
	$(RANLIB) $@

tldeps:
	test -n "$(TLDEPS)" && ( cd .. ; $(MAKE) $(MFLAGS) $(TLDEPS) || exit 1) || :

clean :
	- /bin/rm -f pw.x *.o *.a *~ *.F90 *.d *.mod *.i work.pc

include make.depend

